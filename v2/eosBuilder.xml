<project name="eosLibraries">

	<fileGroups>

		<fileGroup name="eos-stm32-includes">
			<selection source="Include/*.h"/>
			<selection source="Include/HTL/*.h"/>
		</fileGroup>

		<fileGroup name="eos-stm32g0-includes">
			<selection source="Include/HTL/STM32/*.h">
				<exclude filter="htlLTDC.h"/>
				<exclude filter="htlDMA2D.h"/>
			</selection>
			<selection source="Include/HTL/STM32/G0/*.h" subDirs="true"/>
		</fileGroup>

		<fileGroup name="eos-stm32g0-sources">
			<selection source="Source/*.cpp" subDirs="true"/>
		</fileGroup>

		<fileGroup name="eos-stm32f4-includes">
			<selection source="Include/HTL/STM32/*.h"/>
			<selection source="Include/HTL/STM32/F4/*.h" subDirs="true"/>
		</fileGroup>

		<fileGroup name="eos-stm32f4-sources">
			<selection source="Source/*.cpp" subDirs="true"/>
		</fileGroup>

	</fileGroups>

	<packs outputDir=".platformIO/packages">
	
		<pack name="framework-eos-stm32g0" format="zip">
			<include fileGroup="eos-stm32-includes"/>
			<include fileGroup="eos-stm32g0-includes"/>
			<include fileGroup="eos-stm32g0-sources"/>
		</pack>
		
		<pack name="framework-eos-stm32f4" format="zip">
			<include fileGroup="eos-stm32-includes"/>
			<include fileGroup="eos-stm32f4-includes"/>
			<include fileGroup="eos-stm32f4-sources"/>
		</pack>
		
	</packs>
	
</project>